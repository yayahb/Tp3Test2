@model PrivacyModel
@{
    ViewData["Title"] = "Politique de confidentialité";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
